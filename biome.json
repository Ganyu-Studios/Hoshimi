{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noInferrableTypes": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"indentWidth": 4,
			"lineWidth": 100,
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"files": {
		"include": ["**/*"],
		"ignore": ["node_modules", "dist", ".vscode", ".npm"]
	}
}
